{
  "name": "ditto-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "@ditto-network/core/src",
  "projectType": "library",
  "targets": {
    "prepare-prod-config": {
      "command": "mv ./dist/ditto-sdk/src/lib/config/config.prod.js ./dist/ditto-sdk/src/lib/config/config.js",
      "dependsOn": ["compile"]
    },
    "compile": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/ditto-sdk",
        "main": "@ditto-network/core/src/index.ts",
        "tsConfig": "@ditto-network/core/tsconfig.lib.json",
        "assets": ["@ditto-network/core/*.md"]
      }
    },
    "build": {
      "command": "pwd",
      "dependsOn": ["prepare-prod-config"]
    }
  },
  "tags": []
}
