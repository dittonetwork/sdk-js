{
  "name": "@ditto-network/core",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:cjs && npm run build:types && npm run prepare-prod-config",
    "build:cjs": "tsc --project ./tsconfig.json --outDir ./dist/cjs --verbatimModuleSyntax false",
    "build:types": "tsc --project ./tsconfig.json --module esnext --declarationDir ./dist/types --emitDeclarationOnly --declaration --declarationMap",
    "prepare-prod-config": "mv dist/cjs/lib/config/config.prod.js dist/cjs/lib/config/config.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@uniswap/sdk-core": "^3.2.6",
    "@uniswap/smart-order-router": "3.16.26",
    "@uniswap/v3-sdk": "^3.10.0",
    "ethers": "6.11.1",
    "ethers5": "npm:ethers@5.7.1",
    "fetch-ponyfill": "7.1.0",
    "rambda": "^9.2.0"
  },
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/exports/index.d.ts",
  "typings": "./dist/types/exports/index.d.ts",
  "private": false
}
