{
  "name": "automation-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/automation-kit/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/automation-kit",
        "main": "packages/automation-kit/src/index.ts",
        "tsConfig": "packages/automation-kit/tsconfig.lib.json",
        "assets": [],
        "project": "packages/automation-kit/package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/automation-kit"
      }
    }
  }
}
